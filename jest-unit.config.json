{
  "verbose": true,
  "testEnvironment": "node",
  "coverageReporters": ["json", "lcov", "cobertura", "clover"],
  "moduleFileExtensions": ["ts", "tsx", "js"],
  "transform": {
    "\\.(ts|tsx)$": "ts-jest"
  },
  "testRegex": "test/**/.*\\.test.(ts|tsx)$",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 0
    }
  }
}
